{
    "hooks": {
        "Stop": [
            {
                "hooks": [
                    {
                        "command": "terminal-notifier -title \"Claude Code\" -message \"Task completed\" -sound default -appIcon \"/nix/store/dq9g1p7kskc0n10k38rac7c1wnx3792p-claude.png\"",
                        "type": "command"
                    }
                ],
                "matcher": ".*"
            }
        ]
    },
    "permissions": {
        "allow": [
            "Edit(~/code/**)",
            "Grep(~/code/**)",
            "Edit(~/sylva/**)",
            "Grep(~/sylva/**)",
            "Glob(**)",
            "LS(**)",
            "Bash(ls:*)",
            "Bash(tree:*)",
            "Bash(pwd:*)",
            "Bash(find:*)",
            "Bash(grep:*)",
            "Bash(which:*)",
            "mcp__ide__getDiagnostics"
        ],
        "deny": [
            "Read(//etc/**)",
            "Edit(//etc/**)",
            "Bash(su:*)",
            "Bash(sudo:*)",
            "Bash(env:*)",
            "Bash(printenv:*)",
            "Bash(passwd:*)",
            "Bash(history:*)",
            "Bash(rsync:*)",
            "Bash(scp:*)",
            "Bash(sftp:*)",
            "Bash(socat:*)",
            "Bash(ssh:*)",
            "Bash(nc:*)",
            "Bash(ncat:*)",
            "Bash(netcat:*)",
            "Bash(nmap:*)",
            "Bash(git push:*)",
            "Bash(supabase db:*)",
            "Bash(supabase functions:*)",
            "Bash(modal deploy:*)",
            "Bash(rm -rf:*)"
        ]
    },
    "env": {
        "DISABLE_BUG_COMMAND": "1",
        "DISABLE_ERROR_REPORTING": "1",
        "DISABLE_TELEMETRY": "1"
    },
    "mcpServers": {
        "playwright": {
            "type": "stdio",
            "command": "pnpx",
            "args": [
                "@playwright/mcp@latest"
            ],
            "env": {}
        },
        "context7": {
            "type": "stdio",
            "command": "pnpx",
            "args": [
                "@upstash/context7-mcp"
            ],
            "env": {}
        }
    }
}
